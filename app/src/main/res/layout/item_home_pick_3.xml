<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginEnd="22dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_thumnail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/no_color_background_corner_10"
        android:src="@drawable/homepick_example_3"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AB홀딩스"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_marginEnd="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <TextView
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0 (500)"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250,000원"/>
</LinearLayout>
</layout>