<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_thumnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hompick_example_2"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/club_like"
        app:layout_constraintTop_toTopOf="@id/iv_thumnail"
        app:layout_constraintStart_toStartOf="@id/iv_thumnail"
        android:layout_marginTop="9dp"
        android:layout_marginStart="9dp"/>
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/iv_thumnail"
        app:layout_constraintStart_toStartOf="@id/iv_thumnail"
        app:layout_constraintEnd_toEndOf="@id/iv_thumnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="캠핑족을 위한 안전사고 예방"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>