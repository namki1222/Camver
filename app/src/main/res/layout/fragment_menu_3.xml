<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragment.Menu3Fragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/top_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캠핑클럽"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_search"
            android:paddingTop="12dp"
            android:paddingEnd="9dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toStartOf="@id/iv_write"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/blue_search"/>
        <ImageView
            android:id="@+id/iv_write"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/writing"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        app:layout_constraintTop_toBottomOf="@id/top_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tab_layoout"
        android:layout_width="match_parent"
        app:tabTextColor="#c9c9c9"
        app:tabSelectedTextColor="#3c7be5"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#3c7be5"
        android:layout_height="30dp">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중고거래"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천캠핑장"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정보공유"/>
    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_homefocus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layoout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_follower"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:padding="15dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/rv_follower"
            android:id="@+id/rv_feed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>