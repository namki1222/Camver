<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_thumnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/hompick_example_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/iv_thumnail"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캠펑 여름 캠핑"/>
    <LinearLayout
        android:id="@+id/ll_1"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_marginEnd="1dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <ImageView
            android:layout_marginEnd="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/star_on_off_select"/>
        <TextView
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0 (500)"/>
    </LinearLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250,000원"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>