<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="13dp"
    android:background="@drawable/color_white_background_corner_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_list_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:src="@drawable/home_menu_1"/>
        <ImageView
            android:id="@+id/iv_list_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:src="@drawable/home_menu_2"/>
        <ImageView
            android:id="@+id/iv_list_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:src="@drawable/home_menu_3"/>
        <ImageView
            android:id="@+id/iv_list_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/home_menu_4"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_list_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/home_menu_5"/>
        <ImageView
            android:id="@+id/iv_list_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/home_menu_6"/>
        <ImageView
            android:id="@+id/iv_list_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/home_menu_7"/>
        <ImageView
            android:id="@+id/iv_list_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/home_menu_8"/>
    </LinearLayout>

</LinearLayout>
</layout>