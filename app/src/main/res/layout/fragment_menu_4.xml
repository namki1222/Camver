<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Menu4Fragment">
    <fragment
        android:id="@+id/top_fragment"
        android:name="com.rightcode.camver.fragment.TopFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="TopFragment"
        tools:layout="@layout/fragment_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.tabs.TabLayout
        app:layout_constraintTop_toBottomOf="@id/top_fragment"
        android:id="@+id/tab_layoout"
        android:layout_width="match_parent"
        app:tabTextColor="#c9c9c9"
        app:tabSelectedTextColor="#3c7be5"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#3c7be5"
        android:layout_height="30dp">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="캠핑/여행"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="푸드/식품"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="뷰티"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홈/리빙"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="패션/잡화"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자동차용품"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="디지털가전"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tv_tab_area8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기획전"/>
    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_homefocus"
        app:layout_constraintTop_toBottomOf="@id/tab_layoout"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/basket_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>