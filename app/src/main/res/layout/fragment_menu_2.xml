<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Activity.CampingActivity">
        <fragment
            android:id="@+id/top_fragment"
            android:name="com.rightcode.camver.fragment.TopFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="TopFragment"
            tools:layout="@layout/fragment_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/ll"
            app:layout_constraintTop_toBottomOf="@id/top_fragment"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layoout"
                    android:layout_width="match_parent"
                    app:tabTextColor="#c9c9c9"
                    app:tabSelectedTextColor="#3c7be5"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="#3c7be5"
                    android:layout_height="30dp">
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전체"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="경기(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="인천(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="강원(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="충남(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="대전(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="충북(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="세종(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="부산(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="울산(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="대구(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="경북(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="경남(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="전남(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="광주(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="전북(80)"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tv_tab_area18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_select"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            android:textSize="14dp"
                            android:text="제주(80)"/>
                </com.google.android.material.tabs.TabLayout>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_homefocus"
            app:layout_constraintTop_toBottomOf="@id/ll"/>
        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_average"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@drawable/text_filter_select"
                    android:background="@drawable/filter_select"
                    android:text="평점순"/>
                <TextView
                    android:id="@+id/tv_near"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@drawable/text_filter_select"
                    android:background="@drawable/filter_select"
                    android:text="근거리순"/>
                <TextView
                    android:id="@+id/tv_update"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@drawable/text_filter_select"
                    android:background="@drawable/filter_select"
                    android:text="업데이트순"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ImageView
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/map"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>